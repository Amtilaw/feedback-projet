{% extends 'base.html.twig' %}

{% block title %}
    Login
            
        
    
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <form method="post">
                <fieldset>
                    <legend>
                        Connexion
                                                                                            
                                                                    
                                            
                    </legend>
                    <div class="form-group row">

                        <div class="form-group">
                            <label for="username" class="form-label mt-4">
                                Username          
                            </label>
                            <input type="text" name="login" class="form-control" id="login" aria-describedby="usernameHelp" placeholder="Enter username">
                                <small id="usernameHelp" class="form-text text-muted">
                                    Entrez votre nom d'utilisateur.
                                </small>
                        </div>
                        <div class="form-group">
                                <label for="exampleInputPassword1" class="form-label mt-4">
                                    Password                    
                                </label>
                                <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                                <br />
                        </div>
                                
                                <button type="submit" id="idButtonLogin" class="btn btn-primary" >
                                    Submit                         
                                </button>
                            </fieldset>
                        </form>
                    </div>
                </div>


                <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>

            {% endblock %}
            